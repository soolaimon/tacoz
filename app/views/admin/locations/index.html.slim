h1 Our Locations

= link_to "New Location", new_admin_location_path, class: "btn btn-success btn-lg"

- @locations.in_groups_of(4, false) do |group|
  .row
    - group.each do |location|
      .col-sm-3
        address #{location.street_address} #{location.street_address2} #{location.city}, #{location.state} #{location.zip}

      .col-sm-3
        = link_to 'Edit', edit_admin_location_path(location), class: "btn btn-success"
  
        = link_to "View Map", location_path(location), class: "btn btn-primary"

